{
  "verbose": true,
  "npm": true,
  "moduleResolution": "node",
  "plugins": {
    "local": {
      "browsers": ["chrome"]
    },
    "istanbul": {
      "reporters": ["text", "text-summary", "lcov"],
      "include": [
        "**/src/**/*.js"
      ],
      "exclude": [
        "**/test/**"
      ]
    }
  }
}
